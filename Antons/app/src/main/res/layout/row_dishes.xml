<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <se.miun.josd1802.antons.Utils.LetterImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ivLetter"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/dishname"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/ivLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/dishDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:autofillHints=""
            android:background="@color/lightgrey"
            android:hint="@string/details"
            android:inputType="textMultiLine"
            android:paddingLeft="5dp"
            android:layout_marginLeft="12dp"
            android:paddingRight="5dp"
            android:layout_toRightOf="@id/ivLetter"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp">

            <ImageButton
                android:id="@+id/b_decrement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/bminus"
                />

            <TextView
                android:id="@+id/inc_decValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:text="@string/incdecvalue"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/b_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/bplus"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>